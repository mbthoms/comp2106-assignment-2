<%- include ../partials/header.ejs %>

<main class="container">
    <h1>Business Details</h1>
    <form method="post" action="<%= business._id %>">
        <fieldset class="form-group">
            <label for="businessName" class="col-sm-2">Business Name:</label>
            <input name="businessName" id="businessName" required value="<%= business.businessName %>" />
        </fieldset>
        <fieldset class="form-group">
            <label for="about" class="col-sm-2">Content:</label>
            <textarea name="about" id="about" required><%= business.about %></textarea>
        </fieldset>
        <fieldset class="form-group">
            <label for="phoneNumber" class="col-sm-2">About the Business:</label>
            <input name="phoneNumber" id="phoneNumber" required value="<%= business.phoneNumber %>" />
        </fieldset>

        <div>
            <%= business.created %>
        </div>
        <button class="btn btn-primary col-sm-offset-2">Save</button>

        <a href="/articles/delete/<%= business._id %>" title="Delete" class="confirmation">
            <button class="btn btn-danger" type="button">Delete</button>
        </a>
    </form>
</main>

<%- include ../partials/footer.ejs %>